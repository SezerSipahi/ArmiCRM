@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const loginContainer = document.querySelector('.login-container');

        // Modal iÅŸlemleri
        function showRegister() {
            document.getElementById('registerModal').style.display = 'block';
            loginContainer.style.display = 'none';
        }

        function hideRegister() {
            document.getElementById('registerModal').style.display = 'none';
            loginContainer.style.display = 'block';
        }

        function showForgotPassword() {
            document.getElementById('forgotPasswordModal').style.display = 'block';
            loginContainer.style.display = 'none';
        }

        function hideForgotPassword() {
            document.getElementById('forgotPasswordModal').style.display = 'none';
            loginContainer.style.display = 'block';
        }

        // Form iÅŸlemleri
        async function handleRegister(event) {
            event.preventDefault();
            const form = event.target;

            const user = {
                fullName: form.fullName.value,
                email: form.email.value,
                username: form.fullName.value,
                password: form.password.value
            };

            try {
                const response = await fetch('/api/account/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(user)
                });

                if (response.ok) {
                    alert('KayÄ±t baÅŸarÄ±lÄ±! GiriÅŸ yapabilirsiniz.');
                    hideRegister();
                    form.reset();
                } else {
                    const error = await response.text();
                    alert('KayÄ±t baÅŸarÄ±sÄ±z: ' + error);
                }
            } catch (error) {
                alert('Bir hata oluÅŸtu: ' + error);
            }
            return false;
        }

        async function handleForgotPassword(event) {
            event.preventDefault();
            const form = event.target;

            try {
                const response = await fetch('/api/account/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: form.email.value })
                });

                if (response.ok) {
                    alert('Åžifre sÄ±fÄ±rlama baÄŸlantÄ±sÄ± e-posta adresinize gÃ¶nderildi.');
                    hideForgotPassword();
                    form.reset();
                } else {
                    const error = await response.text();
                    alert('Ä°ÅŸlem baÅŸarÄ±sÄ±z: ' + error);
                }
            } catch (error) {
                alert('Bir hata oluÅŸtu: ' + error);
            }
            return false;
        }
    </script>
} 