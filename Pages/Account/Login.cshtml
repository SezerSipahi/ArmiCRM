}

<style>
    .login-container {
        background: rgba(255, 255, 255, 0.22);
        backdrop-filter: blur(12px);
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25), 0 1.5px 6px rgba(0,0,0,0.18);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 35px;
        width: 100%;
        max-width: 450px;
        position: relative;
        margin: 0 auto;
        text-align: left;
    }

    .card-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        font-family: 'Fredoka', sans-serif;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
        margin-bottom: 2rem;
        font-size: 1.1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        color: white;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.6);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .form-check {
        margin: 1.5rem 0;
        color: white;
    }

    .form-check-input {
        margin-right: 0.5rem;
    }

    .btn-login {
        width: 100%;
        padding: 12px;
        background: linear-gradient(90deg, #ff758c 0%, #ff7eb3 100%);
        border: none;
        color: white;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        cursor: pointer;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 4px 16px rgba(255, 117, 140, 0.15);
        transition: background 0.3s, box-shadow 0.3s;
    }

    .btn-login:hover {
        background: linear-gradient(90deg, #ff7eb3 0%, #ff758c 100%);
        box-shadow: 0 6px 24px rgba(255, 117, 140, 0.25);
    }

    .links {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
    }

    .links a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.9rem;
        cursor: pointer;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .links a:hover {
        color: white;
    }

    .icon {
        font-size: 1.1rem;
        user-select: none;
    }

    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90%;
        max-width: 450px;
        z-index: 1000;
    }

    .modal-content {
        position: relative;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    #registerModal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        margin: 0;
        width: 90%;
        max-width: 450px;
        z-index: 1000;
        height: auto;
    }

    #registerModal .modal-content {
        width: 100%;
        height: auto;
        padding: 35px;
        background: rgba(255, 255, 255, 0.22);
        backdrop-filter: blur(12px);
        border-radius: 8px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25), 0 1.5px 6px rgba(0,0,0,0.18);
        border: 1px solid rgba(255, 255, 255, 0.3);
        margin: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    #registerModal .modal-content form {
        display: grid;
        grid-template-columns: 1fr;
        gap: 18px;
    }

    #forgotPasswordModal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: none;
        width: 90%;
        max-width: 400px;
        z-index: 1000;
    }

    #forgotPasswordModal .modal-content {
        padding: 35px;
        margin: 0;
        position: relative;
        width: 100%;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .close {
        position: absolute;
        right: 20px;
        top: 15px;
        color: white;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
        z-index: 1;
    }

    .close:hover {
        color: rgba(255, 255, 255, 0.7);
    }

    .btn-register, .btn-forgot {
        width: 100%;
        padding: 12px;
        background: linear-gradient(90deg, #ff758c 0%, #ff7eb3 100%);
        border: none;
        color: white;
        border-radius: 8px;
        margin-top: 1rem;
        cursor: pointer;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 4px 16px rgba(255, 117, 140, 0.15);
        transition: background 0.3s, box-shadow 0.3s;
    }
    .btn-register:hover, .btn-forgot:hover {
        background: linear-gradient(90deg, #ff7eb3 0%, #ff758c 100%);
        box-shadow: 0 6px 24px rgba(255, 117, 140, 0.25);
    }

    /* Mobil cihazlar iÃ§in */
    @@media (max-width: 480px) {
        .login-container {
            width: 95%;
            padding: 20px;
            margin: 10px;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .form-group {
            margin-bottom: 0.75rem;
        }

        .btn-login {
            padding: 8px;
        }

        .links {
            flex-direction: column;
            gap: 10px;
        }

        .links a {
            display: block;
        }

        .modal-content {
            padding: 20px;
        }

        #registerModal .modal-content {
            padding: 20px;
            width: 100%;
            height: auto;
        }

        #forgotPasswordModal .modal-content {
            padding: 25px;
        }
    }
</style>

