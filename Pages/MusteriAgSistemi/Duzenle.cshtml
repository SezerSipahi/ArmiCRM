                } else {
                    cards.forEach((card, index) => {
                        // Card header'ını güncelle
                        var header = card.querySelector('.card-header h6');
                        if (header) header.textContent = `Özel Parametre #${index + 1}`;
                        
                        // Input name'lerini güncelle
                        var inputs = card.querySelectorAll('input, select, textarea');
                        inputs.forEach(input => {
                            if (input.name && input.name.includes('OzelParametreler[')) {
                                input.name = input.name.replace(/OzelParametreler\[\d+\]/, `OzelParametreler[${index}]`);
                            }
                            if (input.name && input.name.includes('LogoResim_')) {
