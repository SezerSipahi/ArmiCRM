/* Temel sekme stilleri */
.nav-tabs {
    border-bottom: 2px solid rgba(255, 192, 203, 0.3);
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px 10px 0 0;
    padding: 10px 10px 0 10px;
}

.nav-tabs .nav-link {
    color: #333;
    border: none;
    padding: 12px 25px;
    margin-right: 5px;
    border-radius: 10px 10px 0 0;
    font-weight: 500;
    position: relative;
    transition: all 0.3s ease;
}

/* Müşteri Bilgileri sekmesi */
.nav-tabs .nav-link[href="#musteri-bilgileri"] {
    background: linear-gradient(45deg, rgba(255, 182, 193, 0.2), rgba(255, 218, 185, 0.2));
}

.nav-tabs .nav-link[href="#musteri-bilgileri"]:hover {
    background: linear-gradient(45deg, rgba(255, 182, 193, 0.4), rgba(255, 218, 185, 0.4));
}

.nav-tabs .nav-link[href="#musteri-bilgileri"].active {
    background: linear-gradient(45deg, rgba(255, 182, 193, 0.8), rgba(255, 218, 185, 0.8));
}

