/* İptal butonları için ortak stil */
.btn-secondary {
    background: linear-gradient(45deg, #bdc3c7, #95a5a6);
}

.btn-secondary:hover {
    background: linear-gradient(45deg, #adb3b7, #859596);
}

/* Kaydet butonları için ekstra parlaklık efekti */
.btn-primary:active {
    background-size: 150%;
    transition: background-size 0.3s ease;
}

/* Glassmorphism efekti için ek stil */
.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0));
    border-radius: inherit;
} 