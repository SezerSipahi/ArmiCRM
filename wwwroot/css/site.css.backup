/* Aktif sekme için ortak stiller */
.nav-tabs .nav-link.active {
    color: #000;
    border: none;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.nav-tabs .nav-link:hover {
    border: none;
    color: #000;
}

.nav-tabs .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 2px;
    background: inherit;
    filter: brightness(1.2);
}

.tab-content {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 0 0 10px 10px;
    padding: 20px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(255, 192, 203, 0.2);
    border-top: none;
}

/* Buton temel stilleri */
.btn {
    border: none;
    padding: 8px 20px;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    color: #fff;
}

.btn:active {
    transform: translateY(1px);
}

/* Müşteri Bilgileri sekmesi butonları */
#musteri-bilgileri .btn-primary {
    background: linear-gradient(45deg, #ff9a9e, #fad0c4);
}

#musteri-bilgileri .btn-primary:hover {
    background: linear-gradient(45deg, #ff8a8e, #f8c0b4);
}

/* ERP Bilgileri sekmesi butonları */
#erp-bilgileri .btn-primary {
    background: linear-gradient(45deg, #84fab0, #8fd3f4);
}

#erp-bilgileri .btn-primary:hover {
    background: linear-gradient(45deg, #74eaa0, #7fc3e4);
}

/* Özel Yazılım Bilgileri sekmesi butonları */
